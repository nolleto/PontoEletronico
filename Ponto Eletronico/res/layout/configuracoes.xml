<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal" 
    android:weightSum="20">
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_weight="3"
        android:textSize="20dp"
        android:text="Configurações"/>
    
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="14">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
				android:layout_marginBottom="10dp"
                android:text="Titulo App" />

            <EditText
                android:id="@+id/config_txtTitleApk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
				android:layout_marginBottom="10dp"
                android:text="Email para notificação" />
            
            <ToggleButton 
                android:id="@+id/config_Toggle_Email"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:checked="false"
                android:layout_marginBottom="10dp"
                android:textOn="Ativado"
                android:textOff="Desativado" />

            <EditText
                android:id="@+id/config_txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp" 
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
				android:layout_marginBottom="10dp"
                android:text="Telefone para notificação" />

            <ToggleButton 
                android:id="@+id/config_Toggle_Phone"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:checked="false" 
                android:layout_marginBottom="10dp"
                android:textOn="Ativado"
                android:textOff="Desativado"/>
            
            <EditText
                android:id="@+id/config_txtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
				android:layout_marginBottom="10dp"
                android:text="Horário limite para entrar" />

            <EditText
                android:id="@+id/config_txtCheckIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
				android:layout_marginBottom="10dp"
                android:text="Horário limite saída" />
            
            <EditText
                android:id="@+id/config_txtCheckOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="10dp"  />


        </LinearLayout>
        
    </ScrollView>

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="3"
        android:weightSum="10">
        
        <Button 
            android:id="@+id/config_BtnSalvar"
            android:layout_width="0px" 
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Salvar"/>
        
        <Button 
            android:id="@+id/config_BtnCancelar"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Cancelar"/>
        
    </LinearLayout>
    
</LinearLayout>