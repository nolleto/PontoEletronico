<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:weightSum="20" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_weight="2"
        android:text="Info UsuÃ¡rio"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="9">
        
        <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
			     
            <TextView 
                android:id="@+id/infoFunc_txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="16dp"/>
            
            <TextView 
                android:id="@+id/infoFunc_txtUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="16dp"/>
            
            <TextView 
                android:id="@+id/infoFunc_txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="16dp"/>
            
            <TextView 
                android:id="@+id/infoFunc_txtPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="16dp"/>
            
            <TextView 
                android:id="@+id/infoFunc_txtAdress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="16dp"/>
            
    	</LinearLayout>
    
    </ScrollView>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_weight="2"
        android:text="Lista de Pontos:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ListView
        android:id="@+id/infoFunc_LitView"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="7" >
    </ListView>
    
</LinearLayout>